{
  "name": "port-scanner",
  "version": "1.0.0",
  "description": "Website that scans local ports",
  "main": "src/app.js",
  "scripts": {
    "copy": "copyfiles --up 2 ./client/static/**/*.* ./dist/public/",
    "clean": "npx rimraf dist",
    "build-client": "npm run clean && npx tsc -p ./client/tsconfig.json && npm run copy",
    "build": "npm run build-client && npx tsc -p ./server/tsconfig.json",
    "start": "npm run build && node dist/server/app.js",
    "prepare": "husky install"
  },
  "author": "Bas van de Louw",
  "license": "ISC",
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/node": "^18.14.1",
    "@types/uuid": "^9.0.1",
    "@types/ws": "^8.5.4",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-config-standard-with-typescript": "^34.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.2",
    "prettier": "^2.8.4",
    "typescript": "^4.9.5"
  },
  "lint-staged": {
    "**/*.{js,ts}": [
      "npx prettier --write",
      "npx eslint --fix"
    ],
    "**/*.{html,css,md}": [
      "npx prettier --write"
    ]
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-ws": "^5.0.2",
    "socket.io": "^4.6.1",
    "socket.io-client": "^4.6.1",
    "uuid": "^9.0.0"
  }
}
